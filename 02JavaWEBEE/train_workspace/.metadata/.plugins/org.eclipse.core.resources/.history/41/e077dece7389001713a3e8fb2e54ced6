package zd.cookie;

import java.io.IOException;
import java.net.URLDecoder;
import java.net.URLEncoder;
import java.text.SimpleDateFormat;
import java.util.Date;

import javax.servlet.ServletException;
import javax.servlet.http.Cookie;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
public class TestCookieTime1 extends HttpServlet {
    private static final long serialVersionUID = 1L;
    protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        request.setCharacterEncoding("UTF-8");
        response.setCharacterEncoding("UTF-8");
        response.setContentType("text/html; charset=UTF-8");
        //先往cookie中放当前时间
        long millis = System.currentTimeMillis();
        //放值
        Cookie cookie = new Cookie("time",millis+"");
        //返回给浏览器
        response.addCookie(cookie);
        //取数据
        Cookie[] cookies=request.getCookies();
        for (Cookie cookieTime : cookies) {
			if(cookieTime!=null){
				String value=cookieTime.getValue();
				long t=Long.parseLong(value);
				System.out.println("登录时间为:"+new SimpleDateFormat("yyyy-MM-dd HH:mm:ss").format(new Date(t)));
			}
		}
    }
}