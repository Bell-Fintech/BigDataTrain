package zd.demo;

import java.sql.Connection;
import java.sql.SQLException;
import java.sql.Statement;

import org.junit.Before;
import org.junit.Test;

public class TestUtils {
	Connection conn=null;
	 Statement st=null;
	//先test 后before
	@Before
	public void init() throws SQLException{
		 conn=MyDbUtils.getConnection();
		 st=conn.createStatement();
	}
	@Test
	public void add() throws SQLException{
		//配置文件
		String sql="insert into products values(null,'数据结构',12.09,'计算机',1000,'掌握，适用广')";
		int i=st.executeUpdate(sql);
		System.out.println(i);
		MyDbUtils.release(conn, st, null);
	}
	@Test
	public void delete() throws SQLException{
		//配置文件
		String sql="delete from products where id = 13";
		int i=st.executeUpdate(sql);
		System.out.println(i);
		MyDbUtils.release(conn, st, null);
	}
	@Test
	public void updte() throws SQLException{
		//配置文件
		String sql="update products set name '计算机组成原理' where id = 11";
		int i=st.executeUpdate(sql);
		System.out.println(i);
		MyDbUtils.release(conn, st, null);
	}
	@Test
	public void select() throws SQLException{
		//配置文件
		String sql="update products set name '计算机组成原理' where id = 11";
		int i=st.executeUpdate(sql);
		System.out.println(i);
		MyDbUtils.release(conn, st, null);
	}
}
