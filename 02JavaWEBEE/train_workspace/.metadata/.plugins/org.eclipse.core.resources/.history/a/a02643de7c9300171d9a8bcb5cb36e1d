      )
    values (#{itemsId,jdbcType=INTEGER}, #{itemsName,jdbcType=VARCHAR}, #{price,jdbcType=VARCHAR}
      )
  </insert>
  <insert id="insertSelective" parameterType="zd.model.Items" >
    insert into items
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="itemsId != null" >
