package cn.edu360;
/*
 * 一球从100米高度自由落下，每次落地后反跳回原高度的一半；再落下，求它在 第10次落地时，共经过多少米？第10次反弹多高？
 * 			经过米数		反弹高度
 * 第一次落地：	100			50
 * 第二次落地：	200			25
 * 第三次落地：	250			12.5
 * 除了第一次之外每一次落地经过的米数=上一次的经过的米数+上一次反弹高度*2
 * 每一次落地的反弹高度=上一次落地的反弹高度/2
 */
public class Test4 {

	public static void main(String[] args) {
		//每一次的反弹高度
		double height = 100;
		//总共经过的米数
		double count = 0;
		for(int i=1; i<=10; i++){
			//除了第一次之外每一次落地经过的米数=上一次的经过的米数+上一次反弹高度*2
			//第一次落地的高度就等于100
			if(i==1){
				count = 100;
			}else{
				count = count+height*2;
			}
			//每一次落地的反弹高度=上一次落地的反弹高度/2
			height /= 2;
		}
		//第十次落地时共经过的米数是：299.609375,第十次反弹的高度是：0.09765625

		System.out.println("第十次落地时共经过的米数是："+count+",第十次反弹的高度是："+height);
	}

}
